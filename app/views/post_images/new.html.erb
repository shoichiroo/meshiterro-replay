<h2>画像投稿フォーム</h2>

<%= form_with model: @post_image do |f| %>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :shop_name %><br />
    <%= f.text_field :shop_name %>
  </div>

  <div class="field">
    <%= f.label :caption %><br />
    <%= f.text_area :caption %>
  </div>
    <%= f.submit "投稿" %>
<% end %>