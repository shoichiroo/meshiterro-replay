<%= image_tag @post_image.get_image %>
<%= image_tag @post_image.user.get_profile_image(40, 40) %>
<%= link_to @post_image.shop_name, post_image_path(@post_image.id) %>
説明: <%= @post_image.caption %>
By <%= @post_image.user.name %>
<%= @post_image.created_at.strftime("%Y/%m/%d") %>
<%= link_to @post_image.post_comments.count, post_image_path(@post_image.id) %>
<% if @post_image.user == current_user %>
    <%= link_to "削除", post_image_path(@post_image.id), method: :delete %>
<% end %>

<%= @post_image.post_comments.count %>件コメント
<% @post_image.post_comments.each do |post_comment| %>
  <%= image_tag post_comment.user.get_profile_image(40 ,40) %>
  <%= post_comment.created_at.strftime("%Y/%m/%d") %>
  <%= post_comment.comment %>
  <%= post_comment.comment %>
  <%= link_to "削除", post_image_post_comment_path(post_comment.post_image.id, post_comment.id), method: :delete %>
<% end %>

<%= form_with model: [@post_image, @post_comment] do |f| %>
  <%= f.text_area :comment %>
  <%= f.submit "送信する" %>
<% end %>